<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.sachinreddy.feature.viewModel.AppViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/small_fab_length"
        android:layout_height="@dimen/small_fab_length">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fab_circle"
            android:layout_width="@dimen/small_fab_length"
            android:layout_height="@dimen/small_fab_length"

            android:background="@drawable/round_background_circle"
            android:backgroundTint="@color/recordButtonColor"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/fab_icon"
            android:layout_width="@dimen/small_fab_length"
            android:layout_height="@dimen/small_fab_length"

            android:src="@drawable/ic_play"
            app:tint="@color/colorBackground"
            android:padding="8dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>