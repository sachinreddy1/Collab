<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cell_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/cell_length"
        android:layout_height="@dimen/cell_length"

        android:background="@color/cardBackground"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--    SELECTION CONTAINER    -->

        <include
            android:id="@+id/selection_container"
            layout="@layout/cell_selector"
            android:visibility="visible"
            />

        <!--    EDIT CELL    -->

        <include
            android:id="@+id/edit_cell"
            layout="@layout/cell_edit"
            android:visibility="visible"
            />

        <!--    TEST    -->

        <TextView
            android:id="@+id/cell_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="12dp"
            android:textColor="@color/recordButtonColor"
            tools:text="Cell Data"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

